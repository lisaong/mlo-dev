    "version": "0.2.0",
    "configurations": [
        {
            "name": "CUDA C++: Launch bmm",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/banded_matmul/bmm",
            "args": "0", // gpu id
            "preLaunchTask": "build bmm"
        },
        {
            "name": "CUDA C++: Launch bmm_smem",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/banded_matmul/bmm_smem",
            "args": "0 2", // gpu id, strategy_id
            "preLaunchTask": "build bmm_smem"
        },
        {
            "name": "CUDA C++: Launch bmm_dbuf",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/banded_matmul/bmm_dbuf",
            "args": "0 1", // gpu id, strategy_id
            "preLaunchTask": "build bmm_dbuf"
        },
